<div class="container span9">

  <form class="form-signin" method="post" action="/publishPage/<%=pageRefId%>">
    <h2 class="form-signin-heading">XE - Content Designer</h2>
    <h5 class="form-signin-heading">Page root - <%= pageName %></h5>
    <div class="col-md-8">
      <fieldset>
        <legend>Live Page Viewer</legend>
        <div class="container col-md-12">
          <%- partial('editor', {
            pageLevelComponents: pageLevelComponents,
            pageLevelComponentsString: pageLevelComponentsString
          }) %>
        </div>
      </fieldset>
    </div>
    <div class="col-md-4">
      <fieldset>
        <legend>Available components</legend>
        <ul class="media-list">
          <% for(var i = 0; i < components.length; i++){ %>
          <li class="media">
            <a href="javascript:void(0)" data-href="<%= components[i].componentName %>" class="pull-left launch-modal" data-toggle="modal"
               data-target="#target">
              <img class="media-object" data-src="holder.js/64x64"
                   style="width: 64px;height: 64px;background-color: #333;">
            </a>

            <div class="media-body">
              <h4 class="media-heading"><%= components[i].componentName %></h4>
            </div>
          </li>
          <% } %>
        </ul>
      </fieldset>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Publish</button>
  </form>
  <div class="modal fade bs-example-modal-sm" id="target" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="gridSystemModalLabel">Add options</h4>
        </div>
        <form id="optionSubmit" action="/addOptions/<%= pageRefId%>" method="post">
          <div class="modal-body">
            <fieldset>
              <legend>Varient</legend>
              <div class="form-group">
                <label for="varient" class="control-label">User Type:</label>
                <select name="userVarient">
                  <option value="anonymous">Anonymous</option>
                  <option value="registered">Registered</option>
                </select>
              </div>
              <div class="form-group">
                <label for="varient" class="control-label">Language:</label>
                <select name="langVarient">
                  <option value="en">EN</option>
                  <option value="ta">TA</option>
                  <option value="ch">CH</option>
                </select>
              </div>
              <div class="form-group">
                <label for="varient" class="control-label">Location:</label>
                <select name="locVarient">
                  <option value="us">US</option>
                  <option value="uk">UK</option>
                  <option value="in">IN</option>
                </select>
              </div>
            </fieldset>
            <fieldset>
              <legend>Content</legend>
              <div class="form-group">
                <label for="title" class="control-label">Title:</label>
                <input type="text" class="form-control" name="title">
              </div>
            </fieldset>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


